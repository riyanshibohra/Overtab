{
  "manifest_version": 3,
  "name": "Overtab",
  "version": "1.0.0",
  "description": "Highlight, hover, or speak to get instant explanations: all on-device with Gemini Nano.",
  
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "contextMenus",
    "sidePanel"
  ],
  
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "24": "icons/icon24.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "background": {
    "service_worker": "src/background/background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/utils/ai-helper.js", "src/content/content.js"],
      "css": ["src/content/content-styles.css"]
    }
  ],
  
  "side_panel": {
    "default_path": "src/sidebar/sidebar.html"
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "24": "icons/icon24.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
  